{
    "name": "Crunchyroll - Fullscreen",
    "description": "Crunchyroll video editor addons",
    "version": "0.1",
    "manifest_version": 3,
    "icons": {
        "128": "icon.png"
    },
    "action": {
        "default_popup": "pages/index.html"
    },
    "background": {
        "service_worker": "scripts/background.js",
        "type": "module"
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "webNavigation"
    ],
    "host_permissions": [
        "https://www.crunchyroll.com/",
        "https://static.crunchyroll.com/"
    ]
}